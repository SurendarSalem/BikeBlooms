<resources>
    <!-- Base application theme. -->
    <style name="Theme.BikeBlooms" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/cherry_red</item>
        <item name="colorPrimaryVariant">@color/cherry_red</item>
        <item name="colorOnPrimary">@color/off_white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/cherry_red</item>
        <item name="colorSecondaryVariant">@color/cherry_red</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/cherry_red</item>
        <!-- Customize your theme here. -->
        <item name="colorControlNormal">@color/cherry_red</item>
        <item name="android:textColor">@color/black</item>

        <item name="android:fontFamily">@font/salmapro</item>
    </style>

    <style name="Heading" parent="Widget.AppCompat.TextView">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Body">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Small">
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textSize">10sp</item>
    </style>


    <style name="Caption">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="RedCaption">
        <item name="android:textColor">@color/cherry_red</item>
        <item name="android:textSize">16sp</item>
    </style>


    <style name="SplashTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_bg</item>
    </style>

    <style name="Theme.App.Starting" parent="Theme.SplashScreen">
        <!-- Set the splash screen background, animated icon, and animation duration. -->
        <item name="windowSplashScreenBackground">@android:color/transparent</item>

        <item name="windowSplashScreenAnimationDuration">3000</item>

        <!-- Set the theme of the Activity that directly follows your splash screen. -->
        <!-- Required -->
        <item name="postSplashScreenTheme">@style/Theme.BikeBlooms</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize50Percent" parent="">
        <item name="cornerSize">50%</item>
    </style>

    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:fontFamily">@font/swansea</item>
    </style>

    <style name="AppButton">
        <item name="cornerRadius">20dp</item>
        <item name="android:paddingStart">40dp</item>
        <item name="android:paddingEnd">40dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>