<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="@dimen/activity_horizontal_margin"
    tools:context=".ui.contactus.ContactUsFragment">


    <androidx.appcompat.widget.AppCompatTextView
        style="@style/RedCaption"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/address"
        android:textSize="@dimen/textsize_very_large1" />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_small"
        android:text="Bangalore, Karnataka, India."
        android:textSize="@dimen/textsize_very_large2" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_mobile_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_small"
        android:clickable="true"
        android:drawableStart="@drawable/phone_24"
        android:drawablePadding="@dimen/margin_small"
        android:drawableTint="@color/cherry_red"
        android:focusable="true"
        android:text="(+91) 9986194616"
        android:textSize="@dimen/textsize_very_large2" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/margin_small"
        android:clickable="true"
        android:drawableStart="@drawable/mail_24"
        android:drawablePadding="@dimen/margin_small"
        android:drawableTint="@color/cherry_red"
        android:focusable="true"
        android:text="info@bikebloom.co.in"
        android:textSize="@dimen/textsize_very_large2" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_fb"
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:src="@drawable/facebook" />

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_insta"
            android:layout_width="@dimen/icon_size"
            android:layout_height="@dimen/icon_size"
            android:layout_marginStart="@dimen/margin_small"
            android:src="@drawable/instagram" />
    </LinearLayout>

</LinearLayout>